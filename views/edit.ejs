<%- include("partials/header.ejs") %> 
<h1> Edit blog <%= element.title %> </h1>

<form action="/blogs/<%= element._id %>?_method=PUT" method="POST">
  <div class="ui form" >
    <div class="field">
      <label>Caption</label>
      <input type="text" rows="2" name="updates[title]" value="<%= element.title %> " >
    </div>
      <div class="field">
          <label>Image URL</label>
          <input type="text" name="updates[image]"  value="<%= element.image %> " >
      </div>
      <div class="field">
        <label>Text</label>
        <input type="text"  name="updates[description] " id="description" value="<%= element.description %> ">
      </div>
      <div>
        <button type="submit" class="">Submit</button>
      </div>
    </form>   

<%- include("partials/footer.ejs") %> 
